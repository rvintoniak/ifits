<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>

    <!-- Default Main Template -->
    <definition name=".mainTemplate" template="/WEB-INF/views/main.jsp">
        <put-attribute name="title" value="title" type="string"/>
        <put-attribute name="header" value="header" type="string"/>
        <put-attribute name="footer" value="footer" type="string"/>
        <put-attribute name="menu" value="/WEB-INF/views/menu.jsp"/>
        <put-attribute name="body" value=""/>
    </definition>

    <definition name="news" extends=".mainTemplate">
        <put-attribute name="body" value="/WEB-INF/views/index.jsp"/>
    </definition>
    <definition name="editNews" extends=".mainTemplate">
        <put-attribute name="body" value="/WEB-INF/views/editNews.jsp"/>
    </definition>
    <definition name="addUser" extends=".mainTemplate">
        <put-attribute name="body" value="/WEB-INF/views/users/register.jsp"/>
    </definition>
    <definition name="listUsers" extends=".mainTemplate">
        <put-attribute name="body" value="/WEB-INF/views/users/listAll.jsp"/>
    </definition>
    <definition name="editUser" extends=".mainTemplate">
        <put-attribute name="body" value="/WEB-INF/views/users/edit.jsp"/>
    </definition>

</tiles-definitions>